{
    "name": "ferb/logs",
    "type": "library",
    "description": "A configurable logger factory for monolog which allows hierarchical channel mapping",
    "homepage": "https://github.com/jeff-becker-projekt202/FerbLogs",
    "license": "MIT",
    "require": {
        "monolog/monolog": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "Ferb\\Logs\\": "src/",
            "Ferb\\Logs\\Tests\\":  "tests/"
        }
    },
    "bin": ["bin/PressFramework"],
    "scripts": {
        "test":"php ./vendor/phpunit/phpunit/phpunit",
        "fix-all":"php ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config .php_cs"
    }
}
